        {
          "name": "Get Property Page Data",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/properties/{{propertyIdRental}}/pages/{{pageName}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "properties",
                "{{propertyIdRental}}",
                "pages",
                "{{pageName}}"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test(\"Status is 200\", function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "pm.test(\"Page name matches\", function () {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.page).to.eql(pm.environment.get(\"pageName\"));",
                  "});",
                  "pm.test(\"Returns page payload\", function () {",
                  "  const json = pm.response.json();",
                  "  pm.expect(json.data).to.be.an(\"object\");",
                  "  pm.expect(json.data.id).to.eql(pm.environment.get(\"pageName\"));",
                  "  pm.expect(json.data.title).to.be.a(\"string\");",
                  "  pm.expect(Array.isArray(json.data.sections)).to.be.true;",
                  "});",
                  "pm.test(\"Section ids exist\", function () {",
                  "  const json = pm.response.json();",
                  "  const sections = json.data.sections || [];",
                  "  sections.forEach(section => {",
                  "    pm.expect(section.id).to.be.a(\"string\");",
                  "  });",
                  "});"
                ]
              }
            }
          ]
        }
